<script>
// ‚îÄ‚îÄ PAGE NAV ‚îÄ‚îÄ
function showPage(id) {
  document.querySelectorAll('.page').forEach(p => p.classList.remove('active'));
  document.querySelectorAll('.tnav').forEach(t => t.classList.remove('active'));
  document.getElementById(id).classList.add('active');
  document.querySelectorAll('.tnav').forEach(t => {
    if (t.getAttribute('onclick') && t.getAttribute('onclick').includes(\`'\${id}'\`)) t.classList.add('active');
  });
  window.scrollTo({ top: 0, behavior: 'smooth' });
}

// ‚îÄ‚îÄ QUIZ ‚îÄ‚îÄ
const LABELS = ['Never','Rarely','Sometimes','Often','Always'];
const SCORES = [0,1,2,3,4];
// Dimension map: Q1-3=Affect, Q4-6=Cognitive, Q7-9=Social(resilience, reverse?), Q10-12=Motivation(resilience)
// For CEDAR: Qs 1-6 are distress (higher=more distress), Qs 7-12 are resilience (higher=more resilience)
const DIM_MAP = {
  1:'affect',2:'affect',3:'affect',
  4:'cognitive',5:'cognitive',6:'cognitive',
  7:'social',8:'social',9:'social',
  10:'motivation',11:'motivation',12:'motivation'
};
let answers = {};

function startQuiz() {
  document.getElementById('quizWrap').style.display = 'block';
  document.querySelector('.cedar-hero button').style.display = 'none';
  // Build options for all questions
  for (let q = 1; q <= 12; q++) {
    const container = document.querySelector(\`#q\${q} .options\`);
    container.innerHTML = '';
    LABELS.forEach((label, i) => {
      const div = document.createElement('div');
      div.className = 'opt';
      div.innerHTML = \`<div class="opt-dot"></div>\${label}\`;
      div.onclick = () => selectOpt(q, i, div);
      container.appendChild(div);
    });
  }
  window.scrollTo({ top: 0 });
}

function selectOpt(q, val, el) {
  answers[q] = val;
  document.querySelectorAll(\`#q\${q} .opt\`).forEach(o => o.classList.remove('selected'));
  el.classList.add('selected');
  const nextBtn = document.getElementById(\`next\${q}\`);
  if (nextBtn) nextBtn.disabled = false;
}

function nextQ(current) {
  if (answers[current] === undefined) return;
  document.getElementById(\`q\${current}\`).classList.remove('active');
  const next = current + 1;
  if (next <= 12) {
    document.getElementById(\`q\${next}\`).classList.add('active');
    const pct = Math.round((next / 12) * 100);
    document.getElementById('progressFill').style.width = pct + '%';
    document.getElementById('qProgressLabel').textContent = \`Question \${next} of 12\`;
  }
  window.scrollTo({ top: document.getElementById('quizWrap').offsetTop - 80, behavior: 'smooth' });
}

function prevQ(current) {
  document.getElementById(\`q\${current}\`).classList.remove('active');
  const prev = current - 1;
  if (prev >= 1) {
    document.getElementById(\`q\${prev}\`).classList.add('active');
    const pct = Math.round((prev / 12) * 100);
    document.getElementById('progressFill').style.width = pct + '%';
    document.getElementById('qProgressLabel').textContent = \`Question \${prev} of 12\`;
  }
}

function showResults() {
  if (answers[12] === undefined) return;
  document.getElementById('quizWrap').style.display = 'none';
  document.getElementById('resultsWrap').style.display = 'block';

  // Calculate dimension scores (0-100 scale, 3 questions each, max 12 per dim)
  const dims = {
    affect: {qs:[1,2,3], label:'Affect & Emotional Response', color:getComputedStyle(document.documentElement).getPropertyValue('--affect').trim(), cls:'affect',
      highNote:'Your emotional responses to climate change are intense. This is a normal and valid reaction ‚Äî but at this level, it is important to actively channel these feelings so they don\\'t become overwhelming or lead to burnout.',
      lowNote:'Your emotional responses to climate are relatively contained. This may reflect good emotional regulation ‚Äî or it may reflect some distancing from the issue. Either way, the activities below help build a healthy relationship with eco-emotions.',
      midNote:'You experience moderate emotional reactions to climate change. You\\'re feeling the weight of it, but managing to stay functional. The activities below will help you process and channel these feelings more effectively.'},
    cognitive:{qs:[4,5,6], label:'Cognitive & Social Impairment', color:'#5a8fa8', cls:'cognitive',
      highNote:'Climate distress is significantly interfering with your daily thinking, decision-making, and relationships. This is the domain where distress becomes impairment ‚Äî and where targeted coping skills can make the most immediate difference.',
      lowNote:'Climate change is not significantly disrupting your concentration or social life. This is a strength. The activities below will help protect this functioning as you engage more deeply with the issue.',
      midNote:'You experience some interference from climate thoughts in your daily life. The activities below help build the mental clarity and relational skills to keep this from escalating.'},
    social:{qs:[7,8,9], label:'Social Support & Resource Access', color:'#7fb069', cls:'social',
      highNote:'You have strong social support and know where to find resources ‚Äî a significant protective factor. Research consistently shows that community is the strongest buffer against climate distress. Build on this.',
      lowNote:'You may feel isolated in your climate concerns or unsure where to turn. This is one of the most common and most impactful challenges for climate-aware young people. The activities below focus specifically on building your support network.',
      midNote:'You have some support and resource access, but there\\'s room to strengthen this. Deepening your connections ‚Äî especially with a "climate tribe" ‚Äî can significantly boost your resilience across all four dimensions.'},
    motivation:{qs:[10,11,12], label:'Motivation & Behavioural Engagement', color:'#c4956a', cls:'motivation',
      highNote:'You have strong motivation to act on climate change. The risk at this level is burnout ‚Äî channeling this energy sustainably and protecting your resilience reservoir is key.',
      lowNote:'Your motivation for climate action may be lower than you\\'d like. The activities below are designed specifically to rebuild intrinsic motivation ‚Äî not through guilt, but through reconnection with what you genuinely care about.',
      midNote:'You have moderate climate motivation. The activities below will help you deepen this into values-based, sustainable engagement ‚Äî the kind that lasts beyond individual campaigns or moments of crisis.'}
  };

  const scoreGrid = document.getElementById('scoreGrid');
  scoreGrid.innerHTML = '';
  const accordion = document.getElementById('dimAccordion');
  accordion.innerHTML = '';

  Object.entries(dims).forEach(([key, dim]) => {
    const raw = dim.qs.reduce((s, q) => s + (answers[q] || 0), 0);
    const pct = Math.round((raw / 12) * 100);
    let level = pct < 35 ? 'low' : pct < 65 ? 'mid' : 'high';

    // Score card
    const sc = document.createElement('div');
    sc.className = \`score-card \${dim.cls}\`;
    sc.innerHTML = \`<h4>\${dim.label}</h4><div class="sc-sub">\${key === 'social' || key === 'motivation' ? 'Resilience Factor' : 'Distress Factor'}</div>
      <div class="score-bar-track"><div class="score-bar-fill" style="width:0%;background:\${dim.color};" data-pct="\${pct}"></div></div>
      <div class="score-val">\${pct}/100 ‚Äî \${pct < 35 ? 'Low' : pct < 65 ? 'Moderate' : 'High'}</div>\`;
    scoreGrid.appendChild(sc);

    // Animate bars
    setTimeout(() => { sc.querySelector('.score-bar-fill').style.width = pct + '%'; }, 300);

    // Accordion
    const note = dim[level + 'Note'];
    const acts = getActivities(key, level);
    const acc = document.createElement('div');
    acc.className = \`dim-detail \${dim.cls}\`;
    acc.innerHTML = \`
      <div class="dim-header" onclick="toggleDim(this)">
        <h3><div class="dim-dot" style="background:\${dim.color};"></div>\${dim.label}</h3>
        <span class="dim-toggle">‚ñæ</span>
      </div>
      <div class="dim-body">
        <div class="dim-score-label">Your score: \${pct}/100 ‚Äî \${level.charAt(0).toUpperCase()+level.slice(1)}</div>
        <div class="dim-interp" style="border-left-color:\${dim.color};">\${note}</div>
        <div class="slabel" style="font-size:0.58rem;margin-bottom:0.75rem;">Flourish Activities for You</div>
        \${acts}
      </div>\`;
    accordion.appendChild(acc);
  });

  // Open first accordion
  accordion.querySelector('.dim-detail').classList.add('open');
  window.scrollTo({ top: document.getElementById('resultsWrap').offsetTop - 80, behavior: 'smooth' });
}

function toggleDim(header) {
  const card = header.parentElement;
  card.classList.toggle('open');
}

