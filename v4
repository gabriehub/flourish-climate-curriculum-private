      <text x="30" y="332" text-anchor="middle" fill="rgba(196,181,253,0.7)" font-family="DM Sans, sans-serif" font-size="8" letter-spacing="2">ADAPT</text>

      <!-- I - Innovate (bottom right) -->
      <circle cx="370" cy="320" r="38" fill="rgba(245,158,11,0.12)" stroke="rgba(245,158,11,0.4)" stroke-width="1.5" filter="url(#glow)"/>
